<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="system" method="upgrade">
	<name>PLG_BFSTOP_NAME</name>
	<author>Bernhard Froehler</author>
	<creationDate>November 2012</creationDate>
	<copyright>Copyleft (C) 2012</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<homepage>https://github.com/codeling/bfstop</homepage>
	<authorEmail>joomla@bfroehler.info</authorEmail>
	<authorUrl></authorUrl>
	<version>0.9</version>
	<description>PLG_BFSTOP_DESC</description>
	<files>
		<filename plugin="bfstop">bfstop.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_bfstop.ini</language>
		<language tag="en-GB">en-GB.plg_system_bfstop.sys.ini</language>
		<language tag="de-DE">de-DE.plg_system_bfstop.ini</language>
		<language tag="de-DE">de-DE.plg_system_bfstop.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="blockEnabled" type="list" default="1" label="ENABLEBLOCKLABEL" description="ENABLEBLOCKDESC">
					<option value="0">DISABLED</option>
					<option value="1">ENABLED</option>
				</field>
				<field name="blockNumber" type="integer" default="15" first="3" last="25" step="1" label="BLOCKNUMBERLABEL" description="BLOCKNUMBERDESC" />
				<field name="blockInterval" type="integer" default="24" first="1" last="48" step="1" label="BLOCKINTERVALLABEL" description="BLOCKINTERVALDESC" />
				<field name="delayDuration" type="integer" default="0" first="0" last="60" step="5" label="DELAYDURATIONLABEL" description="DELAYDURATIONDESC" />
			</fieldset>
			<fieldset name="notify">
				<field name="emailtype" type="list" default="0" label="EMAILSOURCELABEL" description="EMAILSOURCEDESC">
					<option value="0">SELECTEDUSERS</option>
					<option value="1">CUSTOMEMAILADDRESS</option>
				</field>
				<field name="emailaddress" type="text" size="40" default="" label="ENTEREMAILLABEL" description="ENTEREMAILDESC" />
				<field name="userIDs" type="user" default="" label="SELECTUSERLABEL" description="SELECTUSERDESC" />
				<field name="notifyBlockedSource" type="list" default="3" label="NOTIFYBLOCKEDSOURCELABEL" description="NOTIFYBLOCKEDSOURCEDESC">
					<option value="0">NOTIFY_NEVER</option>
					<option value="1">NOTIFY_FRONTEND</option>
					<option value="2">NOTIFY_BACKEND</option>
					<option value="3">NOTIFY_BOTH</option>
				</field>
				<field name="notifyBlockedNumber" type="list" default="0" label="NOTIFYBLOCKEDNUMBERLABEL" description="NOTIFYBLOCKEDNUMBERDESC">
					<option value="0">UNLIMITED</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<field name="notifyFailedSource" type="list" default="0" label="NOTIFYFAILEDSOURCELABEL" description="NOTIFYFAILEDSOURCEDESC">
					<option value="0">NOTIFY_NEVER</option>
					<option value="1">NOTIFY_FRONTEND</option>
					<option value="2">NOTIFY_BACKEND</option>
					<option value="3">NOTIFY_BOTH</option>
				</field>
				<field name="notifyFailedNumber" type="list" default="1" label="NOTIFYFAILEDNUMBERLABEL" description="NOTIFYFAILEDNUMBERDESC">
					<option value="0">UNLIMITED</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>

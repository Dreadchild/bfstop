<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLG_BFSTOP</name>
	<author>Bernhard Froehler</author>
	<description>PLG_BFSTOP_DESC</description>
	<creationDate>November 2012</creationDate>
	<copyright>Copyright (C) 2012 by Bernhard Froehler</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<homepage>https://github.com/codeling/bfstop</homepage>
	<authorEmail>bfstop@bfroehler.info</authorEmail>
	<authorUrl>https://github.com/codeling/bfstop</authorUrl>
	<version>0.9.7</version>
	<files>
		<filename plugin="bfstop">bfstop.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>sql</folder>
	</files>
	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.plg_system_bfstop.ini</language>
			<language tag="en-GB">en-GB/en-GB.plg_system_bfstop.sys.ini</language>
			<language tag="de-DE">de-DE/de-DE.plg_system_bfstop.ini</language>
			<language tag="de-DE">de-DE/de-DE.plg_system_bfstop.sys.ini</language>
	</languages>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates</schemapath>
		</schemas>
	</update>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="blockEnabled" type="list" default="1" label="ENABLEBLOCKLABEL" description="ENABLEBLOCKDESC">
					<option value="0">DISABLED</option>
					<option value="1">ENABLED</option>
				</field>
				<field name="blockedMessage" type="text" size="40" default="" label="BLOCKEDMESSAGELABEL" description="BLOCKEDMESSAGEDESC" />
				<field name="blockNumber" type="integer" default="15" first="3" last="25" step="1" label="BLOCKNUMBERLABEL" description="BLOCKNUMBERDESC" />
				<field name="blockInterval" type="integer" default="24" first="1" last="48" step="1" label="BLOCKINTERVALLABEL" description="BLOCKINTERVALDESC" />
				<field name="delayDuration" type="integer" default="0" first="0" last="60" step="5" label="DELAYDURATIONLABEL" description="DELAYDURATIONDESC" />
			</fieldset>
			<fieldset name="notify">
				<field name="emailtype" type="list" default="0" label="EMAILSOURCELABEL" description="EMAILSOURCEDESC">
					<option value="0">SELECTEDUSERS</option>
					<option value="1">CUSTOMEMAILADDRESS</option>
				</field>
				<field name="emailaddress" type="text" size="40" default="" label="ENTEREMAILLABEL" description="ENTEREMAILDESC" />
				<field name="userIDs" type="user" default="" label="SELECTUSERLABEL" description="SELECTUSERDESC" />
				<field name="notifyBlockedNumber" type="list" default="-1" label="NOTIFYBLOCKEDNUMBERLABEL" description="NOTIFYBLOCKEDNUMBERDESC">
					<option value="-1">NOTIFY_UNLIMITED</option>
					<option value="0">NOTIFY_NEVER</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<field name="notifyFailedNumber" type="list" default="1" label="NOTIFYFAILEDNUMBERLABEL" description="NOTIFYFAILEDNUMBERDESC">
					<option value="-1">NOTIFY_UNLIMITED</option>
					<option value="0">NOTIFY_NEVER</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
